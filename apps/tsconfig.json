{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "lib": [
            "es2020",
            "DOM",
            "DOM.Iterable"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "**/*.js",
    ],
    "exclude": [
        "node_modules"
    ],
}